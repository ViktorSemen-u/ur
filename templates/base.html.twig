<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Система реєстрації користувача{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
    {% block body %}
        <header>
        {% block header %}
            {% block header_nav %}
            <nav class="header_nav">
                <ul>
                    <li><a href="{{ path('app_home') }}">Головна</a></li>
                </ul>
            </nav>
            {% endblock %}
            {% block header_user %}
            {% endblock %}

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn btn-primary" href="{{ path('app_logout') }}" role="button">Вихід</a>
            {% else %}
                <a class="btn btn-primary" href="{{ path('app_login') }}" role="button">Вхід</a>
                <a class="btn btn-primary" href="{{ path('app_register') }}" role="button">Реєстрація</a>
            {% endif %}
            {# <a href="#"><button class="green">Вхід</button></a>
            <a href="#"><button class="green">Реєстрація</button></a>
            #}        
        {% endblock %}
        </header>

        <div class="center_block_main">
            <main>
            {% block main_cont %}
            {% endblock %}
            </main>
        </div>

        <footer></footer>

    {% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
    </body>
</html>
